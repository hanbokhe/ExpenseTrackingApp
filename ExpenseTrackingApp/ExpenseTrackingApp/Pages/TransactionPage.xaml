<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ExpenseTrackingApp.Pages.TransactionPage"
             Title="Transactions">
    
        <ContentPage.Resources>
            <ResourceDictionary>
                <Style TargetType="Label">
                    <Setter Property="FontFamily" Value="sans-serif" />
                    <Setter Property="FontSize" Value="20" />
                </Style>
            </ResourceDictionary>
        </ContentPage.Resources>
        
        <StackLayout >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Picker Grid.Column="0" x:Name="MonthPicker" Title ="Month" WidthRequest="400"  Margin="20,0,0,0" 
                        SelectedIndexChanged="MonthPicker_SelectedIndexChanged" HorizontalOptions="Start">
                    <Picker.Items>
                        <x:String>January</x:String>
                        <x:String>Feburary</x:String>
                        <x:String>March</x:String>
                        <x:String>April</x:String>
                        <x:String>May</x:String>
                        <x:String>June</x:String>
                        <x:String>July</x:String>
                        <x:String>August</x:String>
                        <x:String>September</x:String>
                        <x:String>October</x:String>
                        <x:String>November</x:String>
                        <x:String>December</x:String>
                    </Picker.Items>
                </Picker>
                <Button Grid.Column="1" Text="Add" Margin="0,0,5,0" HorizontalOptions="End" Clicked="AddTransactionButton_Clicked"/>
            </Grid>
            
            <Label x:Name="TotalsLabel" Text="" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="Title"/>
            <Label Text="Total:    SPEND             REMAINING" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="Body"/>

            <Label x:Name="CarLabel" Text="Car" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="CarTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate >
                    <DataTemplate >
                        <TextCell  Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="EntertainmentLabel" Margin="0,0,0,0" Text="Entertainment" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="EntertainmentTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="FoodLabel" Margin="0,0,0,0" Text="Food" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="FoodTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="MiscLabel" Margin="0,0,0,0" Text="Misc" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="MiscTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="ShoppingLabel" Margin="0,0,0,0" Text="Shopping" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="ShoppingTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="RentLabel" Margin="0,0,0,0" Text="Rent" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="RentTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>

</ContentPage>
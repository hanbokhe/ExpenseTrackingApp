<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ExpenseTrackingApp.Pages.TransactionPage"
             Title="Transactions">
    <ContentPage.Content>
        <StackLayout >
            <Label Text="Transactions"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />
            <Label x:Name="TotalsLabel" Text="" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="Title"/>
            <Label Text="Total:    SPEND      REMAINING" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="Body"/>
            <Button Text="Add Transaction" Clicked="AddTransactionButton_Clicked"/>
            <Label x:Name="CarLabel" Text="Car" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="CarTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate >
                    <DataTemplate >
                        <TextCell  Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="EntertainmentLabel" Margin="0,0,0,0" Text="Entertainment" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="EntertainmentTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="FoodLabel" Margin="0,0,0,0" Text="Food" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="FoodTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="MiscLabel" Margin="0,0,0,0" Text="Misc" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="MiscTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="ShoppingLabel" Margin="0,0,0,0" Text="Shopping" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="ShoppingTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="RentLabel" Margin="0,0,0,0" Text="Rent" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Start"/>
            <ListView x:Name="RentTransactionListView"
                  Margin="0,0,0,0"
                  ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"
                              Detail="{Binding Amount}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>